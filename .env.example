# Syncfusion license key (required to suppress trial banners)
# Get yours at: https://www.syncfusion.com/account/manage-trials/downloads
VITE_SYNCFUSION_LICENSE_KEY=

# Figma-to-Theme sync (optional — app runs fully without these)
# Generate a personal access token at: Figma > Settings > Personal access tokens
FIGMA_API_TOKEN=
FIGMA_FILE_KEY=

# Default theme preset applied on first load (before localStorage persistence)
# Must match a preset ID from themePresets (e.g., fremen, figmaDesign, oceanus)
# Falls back to Fremen if empty or unrecognized
VITE_DEFAULT_PRESET=

# Toggle theme studio sidebar visibility (true/false)
# When false, the settings sidebar and cog button are completely hidden
VITE_ENABLE_THEME_STUDIO=true

# Feature flags — toggle entire page sections (true/false)
# When false, pages are excluded from the production bundle (tree-shaken)
# Sidebar hides the section, routes redirect to dashboard, preloader skips it
VITE_ENABLE_COMPONENTS=true
VITE_ENABLE_FORMS=true
VITE_ENABLE_PRODUCTS=true
